<h1>User info</h1>
  <p><%= image_tag user.get_profile_image(100,100)%></p>
  <p><h5>name</h5><br><%= user.name %></p>
   <% if user == current_user %>
  <p><%= link_to "プロフィール編集", edit_user_path(user), class: "btn btn-secondary" %></p>
  <% end %>

<h1>New book</h1>
<%= form_with model: book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
  <% end %>

<h1>Book detail</h1>
<p>Title</p>
<p>Opinion</p>

<% books.each do |book| %>
<div>
  <p><%= link_to image_tag book.user.get_profile_image(100,100) %></p>
  <p><%= link_to book_path(book.id) do %>
    <%= book.title %>
  <% end %></p>
  <p><%= book.body %></p>
</div>
<% end %>

